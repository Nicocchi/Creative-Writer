{
  "name": "creative-writer",
  "version": "0.1.0",
  "description": "All in one writing application suit",
  "private": false,
  "author": "Jeremy Boggs <nicocchilover@gmail.com>",
  "license": "GPU 2.0",
  "homepage": "./",
  "main": "public/electron.js",
  "keywords": [
    "Writing",
    "React",
    "Electron"
  ],
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "preelectron-pack": "npm run build",
    "electron-pack": "build --em.main=build/electron.js",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "@trendmicro/react-sidenav": "^0.4.5",
    "blk-design-system-react": "^1.0.0",
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "electron-is-dev": "^1.0.1",
    "electron-publisher-s3": "^20.17.2",
    "electron-renderer": "^2.0.4",
    "electron-store": "^3.0.0",
    "material-design-icons": "^3.0.1",
    "react": "^16.8.4",
    "react-dev-utils": "^8.0.0",
    "react-dom": "^16.8.4",
    "react-icons": "^3.5.0",
    "react-icons-kit": "^1.2.1",
    "react-quill": "^1.3.3",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-sidenav": "^3.1.7",
    "reactstrap": "^7.1.0",
    "redux": "^4.0.1",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.11",
    "@rescripts/rescript-env": "0.0.10",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.8",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^14.0.2",
    "jquery": "^3.4.1",
    "react-scripts": "2.1.8",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.5.3",
    "version-bump-prompt": "^5.0.0",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "com.nyaastudios.creativewriter",
    "compression": "normal",
    "productName": "Creative Writer",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/macos/logo.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas"
      ]
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/windows/logo.ico"
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Example",
      "category": "Network;Feed"
    }
  }
}
